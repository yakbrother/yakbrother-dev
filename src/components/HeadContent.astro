---
import "@styles/fonts.css";
import "@styles/global.css";

import { CONFIG } from "../config";

const { title = CONFIG.site_title, description = CONFIG.description } = Astro.props;
---

<head>
	<!-- Global Metadata -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="shortcut icon" href="/favicon.ico" />
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
	<meta name="apple-mobile-web-app-title" content="timeaton.dev" />
	<link rel="manifest" href="/site.webmanifest" />
	<meta name="theme-color" content="#ffe6d8" />
	
	<!-- Preload critical fonts -->
	<link rel="preload" href="/fonts/RadioCanada-latin.woff2" as="font" type="font/woff2" crossorigin>
	<link rel="preload" href="/fonts/OleoScript-Regular-latin.woff2" as="font" type="font/woff2" crossorigin>
	<meta name="generator" content={Astro.generator} />

	<!-- Primary Meta Tags -->
	<title>{`Tim Eaton | ${title}`}</title>
	<meta name="title" content={`Tim Eaton | ${title}`} />
	<meta name="description" content={description} />


	</style>

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website" />
	<meta property="og:url" content={Astro.url} />
	<meta property="og:title" content={`Tim Eaton | ${title}`} />
	<meta property="og:description" content={description} />
	<meta property="og:image" content={new URL('/og-default.jpg', Astro.url)} />

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image" />
	<meta property="twitter:url" content={Astro.url} />
	<meta property="twitter:title" content={`Tim Eaton | ${title}`} />
	<meta property="twitter:description" content={description} />
	<meta name="twitter:creator" content="@yakbrother" />
	<meta name="twitter:image" content={new URL('/og-default.jpg', Astro.url)} />

	<!-- RSS Link -->
	<link
		rel="alternate"
		href="/rss.xml"
		type="application/rss+xml"
		title={CONFIG.site_title}
	/>

	<!-- Sitemap -->
	<link rel="sitemap" href="/sitemap-index.xml" />

	<!-- Structured Data: BlogPosting -->
	<script type="application/ld+json">
{
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	"headline": "{title}",
	"description": "{description}",
	"image": [
		"{image ? image : '/og-default.jpg'}"
	],
	"author": {
		"@type": "Person",
		"name": "Tim Eaton"
	},
	"publisher": {
		"@type": "Organization",
		"name": "timeaton.dev",
		"logo": {
			"@type": "ImageObject",
			"url": "/favicon-96x96.png"
		}
	},
	"mainEntityOfPage": {
		"@type": "WebPage",
		"@id": "{Astro.url}"
	}
}
	</script>
	
</head>
