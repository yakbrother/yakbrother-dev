---
interface Props {
  title: string;
  description: string;
  publicationDate: Date;
  category: string;
  slug: string;
}

const { title, description, publicationDate, category, slug } = Astro.props;

const date = new Date(publicationDate);
const formattedDate = date.toLocaleDateString('en-UK', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<a href={`/posts/${slug}`} class="post-card">
  <article>
    <div class="post-meta">
      <time datetime={date.toISOString()}>{formattedDate}</time>
    </div>
    <h3 class="post-title">
      {title}
    </h3>
    <p class="post-description">{description}</p>
  </article>
</a>

<style>
  .post-card {
    display: block;
    padding: 1rem;
    background: var(--color-card);
    border-radius: 0.75rem;
    border: 1px solid var(--color-mid);
    transition: transform 0.2s ease-in-out, border-color 0.2s ease-in-out;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
  }

  .post-card:hover {
    border-color: var(--color-mid);
    background: var(--color-pink-hover);
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .post-card::after {
    display: none;
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.5rem;
    font-size: var(--size-step--1);
    color: var(--color-mid);
  }

  /* category removed from UI */

  .post-title {
    margin: 0;
    margin-bottom: 0.5rem;
    font-size: var(--size-step-0);
    font-weight: 600;
  }

  .post-card:hover .post-description,
  .post-card:hover .post-meta { color: var(--color-dark); }

  .post-description {
    margin: 0;
    font-size: var(--size-step--1);
    color: var(--color-mid);
  }
</style>
