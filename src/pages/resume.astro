---
import PageLayout from '../layouts/PageLayout.astro';

const currentTime = new Date('2025-01-22T14:28:00+01:00');
const formattedDate = currentTime.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<PageLayout
  title="Resume"
  description="Download Resume for Timothy Eaton"
>
  <main class="resume-section">
    <h1 class="visually-hidden">Resume</h1>
    
    <p>
      <a 
        class="button-primary high-contrast" 
        href="/Timothy_Eaton_Full_Stack_Resume.pdf"
        aria-label="Download Resume as PDF"
        download
      >
        Download PDF
      </a>
    </p>

    <p>
      Prefer another format? Email me at 
      <a 
        href="mailto:hello@timeaton.dev"
        class="high-contrast"
        aria-label="Email me for alternate resume formats"
      >
        hello@timeaton.dev
      </a> 
      for alternate versions.
    </p>
  </main>
</PageLayout>
