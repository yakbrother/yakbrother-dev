---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { formatDate } from '../../utils/date';
import { render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  
  return posts.map(post => ({
    params: { slug: post.data.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

---

<Layout title={post.data.title} description={post.data.description}>
  <article class="page-content flow">
    <Breadcrumbs path={['posts', post.data.title]} />
    <header class="post-header">
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <time datetime={post.data.publicationDate.toISOString()}>
          {formatDate(post.data.publicationDate)}
        </time>
        By {post.data.author}
      </div>
    </header>
    
    
    <Content />
  </article>
</Layout>

<style>
  .post {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: var(--size-step-4);
    margin: 0 0 1rem;
    color: var(--color-dark);
  }

  /* In-article heading scale (scoped to post content) */
  .page-content h2 { font-size: var(--size-step-3); }
  .page-content h3 { font-size: var(--size-step-2); }
  .page-content h4 { font-size: var(--size-step-1); }
  .page-content h5 { font-size: var(--size-step-0); }
  .page-content h6 { font-size: var(--size-step--1); }

  .post-meta {
    display: flex;
    width: 100%;
    gap: 1rem;
    align-items: baseline; /* typographic baseline for date/author */
    justify-content: space-between;
    font-size: var(--text-size-meta);
    background-color: var(--color-primary);
    color: var(--color-light);
    padding: var(--space-3xs) var(--space-xs);
    border-radius: var(--radius-s);
  }

  /* category removed from UI */

  /* Make images responsive within post content */
  .page-content img,
  .page-content picture,
  .page-content figure > img {
    max-width: 100%;
    height: auto;
    display: block;
  }

</style>
